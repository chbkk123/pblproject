<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResActivity"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/car_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.3"
            android:layout_centerHorizontal="false"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/car_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.3"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/car_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.3"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="13dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reserveDay"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <TextView
            android:id="@+id/start_date"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="18dp"
            android:hint="시작 일자"
            android:background="@drawable/border_bottom"/>
        <TextView
            android:id="@+id/start_time"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="18dp"
            android:hint="시간"
            android:background="@drawable/border_bottom" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="17dp"
            android:id="@+id/start_date_choice"
            android:src="@drawable/calender_2x"
            android:background="@drawable/button_border_circle"/>

        <ImageButton
            android:id="@+id/start_time_choice"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/timer_2x"
            android:background="@drawable/button_border_circle2"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/end_date"
                android:gravity="center"
                android:textSize="18dp"
                android:hint="종료 일자"
                android:background="@drawable/border_bottom"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/end_time"
                android:gravity="center"
                android:textSize="18dp"
                android:hint="시간"
                android:background="@drawable/border_bottom"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="17dp"
                android:src="@drawable/calender_2x"
                android:background="@drawable/button_border_circle"
                android:id="@+id/end_date_choice"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="17dp"
                android:src="@drawable/timer_2x"
                android:textColor="#000000"
                android:background="@drawable/button_border_circle2"
                android:id="@+id/end_time_choice"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예상금액"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/won"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="시간차이 x 120원 (분당)"
                android:textSize="20dp"/>
        </LinearLayout>




        <Button
            android:id="@+id/Finish"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/end_time_choice"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="15dp"
            android:background="#d1d1d1"
            android:onClick="ClickButton"
            android:text="입력완료"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="RtlCompat"
            tools:layout_editor_absoluteY="401dp" />


</LinearLayout>


