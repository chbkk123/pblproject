<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CheckActivity"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@drawable/border_bottom">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#f2f2f2">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:background="#fffdaa62"
                            android:paddingTop="10dp"
                            android:paddingLeft="10dp">
                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="예약 정보"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#000000"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:background="#ffffff">
                            <TextView
                                android:id="@+id/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>


                    </LinearLayout>
                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/basic_image" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="#ffffff">
                    <TextView
                        android:id="@+id/car_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="차명"
                        android:textSize="16.5dp"/>
                    <TextView
                        android:id="@+id/reserving_car_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentRight="true"
                        android:text="차명 입력"
                        android:textSize="16.5dp"/>
                    <TextView
                        android:id="@+id/car_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/car_name"
                        android:layout_marginTop="20dp"
                        android:text="차번호"
                        android:textSize="16.5dp"/>
                    <TextView
                        android:id="@+id/reserving_car_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/reserving_car_name"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentRight="true"
                        android:text="차번호 입력"
                        android:textSize="16.5dp"/>
                    <TextView
                        android:id="@+id/car_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/car_number"
                        android:layout_marginTop="20dp"
                        android:text="위치"
                        android:textSize="16.5dp"/>
                    <TextView
                        android:id="@+id/reserving_car_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/reserving_car_number"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentRight="true"
                        android:text="위치정보 입력"
                        android:textSize="16.5dp"/>
                    <TextView
                        android:id="@+id/start_date_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/car_location"
                        android:layout_marginTop="20dp"
                        android:text="시작일자/시간"
                        android:textSize="16.5dp"/>
                    <TextView
                        android:id="@+id/reserving_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/reserving_car_location"
                        android:layout_toLeftOf="@+id/reserving_start_time"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:text="시작일자 입력"
                        android:textSize="16.5dp"/>

                    <TextView
                        android:id="@+id/reserving_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/reserving_car_location"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentRight="true"
                        android:text="시작시간 입력"
                        android:textSize="16.5dp"/>
                    <TextView
                        android:id="@+id/end_date_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/start_date_time"
                        android:layout_marginTop="20dp"
                        android:text="종료일자/시간"
                        android:textSize="16.5dp"/>

                    <TextView
                        android:id="@+id/reserving_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/reserving_start_date"
                        android:layout_toLeftOf="@+id/reserving_end_time"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:text="종료일자 입력"
                        android:textSize="16.5dp"/>
                    <TextView
                        android:id="@+id/reserving_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/reserving_start_time"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentRight="true"
                        android:text="종료시간 입력"
                        android:textSize="16.5dp"/>
                    <TextView
                        android:id="@+id/cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/end_date_time"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="금액"
                        android:textSize="16.5dp"/>
                    <TextView
                        android:id="@+id/reserving_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/reserving_end_time"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_alignParentRight="true"
                        android:text="원"
                        android:textSize="16.5dp"/>
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fffdaa62"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home"
            android:background="@drawable/button_circle_home"
            android:onClick="ClickButton"/>
    </LinearLayout>
</LinearLayout>